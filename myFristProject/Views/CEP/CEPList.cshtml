@ViewData["Title"] = "Home Page - lista de ceps"
@model IEnumerable<myFristProject.Models.CEPViewModel>


<div class="text-center">
    <h1 class="display-4">Welcome - Veja a lista de ceps que tenho dispon√≠vel </h1>
    <table class="table table-striped table-hover">
        <tbody> 
            @foreach(CEPViewModel cvm in Model){
                <tr>
                    <div>
                        <td>@cvm.CEP</td>
                        <td>
                            <form asp-action="EditarCEP" method="get">
                                <input type ="hidden" name = "antigoCep" value = "@cvm.CEP"></input>
                                <input type ="submit" class="form-control" value="Editar CEP" />
                            </form>
                        </td>
                        <td>
                            <form asp-action="ExcluirCEP" method="post">
                                <input type="hidden" name="cep" value="@cvm.CEP" />
                                <input type="submit" class="form-control" value="Excluir CEP" />
                            </form>
                        </td>
                    </div>
                </tr>
            }
        </tbody>
    </table>
</div>